{
  "plugins": {},
  "filters": {
    "allowlist": {
      "allow": [
        "/```[\\s\\S]*?```/m",
        "/\\[.*?\\]\\(.*\\)/",
        "/===IGNORE===[\\s\\S]*?===/IGNORE===/m"
      ]
    },
    "comments": true
  },
  "rules": {
    "preset-ja-technical-writing": {
      "ja-no-weak-phrase": false,
      "ja-no-mixed-period": false,
      "ja-no-successive-word": false,
      "no-exclamation-question-mark": false
    },
    "preset-jtf-style": {
        "3.1.1.全角文字と半角文字の間": false,
        "3.1.2.全角文字どうし": false,
        "4.2.7.コロン(：)": false,
        "4.3.1.丸かっこ（）": false
    },
    "prh": {
      "rulePaths": [
        "./.prh.yml"
      ]
    }
  }
}
